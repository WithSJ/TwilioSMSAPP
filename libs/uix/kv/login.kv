<Login_Screen>:
    name: "login"
    
    MDLabel:
        text: app.APP_NAME
        halign: "center"
        pos_hint: {"center_y": .8}
        font_style: "H3"

    MDLabel:
        text: "Log in"
        halign: "center"
        pos_hint: {"center_y":.73}
        font_style: "Subtitle2"
        
    MDTextField:
        hint_text: "Username"
        pos_hint: {"center_x": 0.5, "center_y": 0.65}
        size_hint: .75,0.085
        # mode: "rectangle"
    
    MDTextField:
        hint_text: "Password"
        pos_hint: {"center_x":0.5, "center_y":0.57}
        size_hint: .75,0.085
        password: True
        # mode: "rectangle"
    
    MDRaisedButton:
        text: "Login"
        md_bg_color: "#e7e4c0"
        text_color: "#4a4939"
        pos_hint: {"center_x": 0.5, "center_y":0.48}
        size_hint: .7,0.05
        on_release: app.screen_manager.change_screen("home")

    MDTextButton:
        text: f"[color=#000000]Don't have an account?[/color] Sign up"
        markup: True
        pos_hint: {"center_x":0.5, "center_y":0.33}
        on_release: app.screen_manager.change_screen("signup")
    
    MDLabel:
        text: f"[font=Roboto]{app.COMPANY_NAME}[/font]"
        markup: True
        halign: "center"
        pos_hint: {"center_y":0.05}
        
        
        