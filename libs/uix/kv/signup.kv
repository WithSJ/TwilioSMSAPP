<Signup_Screen>:
    name: "signup"
    MDLabel:
        text: app.APP_NAME
        halign: "center"
        pos_hint: {"center_y": .8}
        font_style: "H3"
    
    MDLabel:
        text: "Sign up"
        halign: "center"
        pos_hint: {"center_y":.73}
        font_style: "Subtitle2"
        
    
    MDTextField:
        hint_text: "Username"
        pos_hint: {"center_x":0.5, "center_y":0.57}
        line_color_focus: "#4a4939"
        hint_text_color_focus: "#4a4939"
        text_color_focus: "#4a4939"
        size_hint_x: .4
        # mode: "rectangle"
    
    MDTextField:
        hint_text: "Password"
        pos_hint: {"center_x":0.5, "center_y":0.49}
        line_color_focus: "#4a4939"
        hint_text_color_focus: "#4a4939"
        text_color_focus: "#4a4939"
        size_hint_x: .4
        password: True
        # mode: "rectangle"
    MDTextField:
        hint_text: "Confirm Password"
        pos_hint: {"center_x":0.5, "center_y":0.41}
        line_color_focus: "#4a4939"
        hint_text_color_focus: "#4a4939"
        text_color_focus: "#4a4939"
        size_hint_x: .4
        password: True
        # mode: "rectangle"
    
    MDRaisedButton:
        text: "Sign up"
        md_bg_color: "#e7e4c0"
        text_color: "#4a4939"
        pos_hint: {"center_x": 0.5, "center_y":0.31}
        size_hint_x: .5
    
    MDTextButton:
        text: f"Have an account? Log in"
        markup: True
        pos_hint: {"center_x":0.5, "center_y":0.22}
        on_release: app.screen_manager.change_screen("login")
    
    MDLabel:
        text: f"[font=Icons] {md_icons['copyright']}[/font]  [font=Roboto]{app.COMPANY_NAME} 2020[/font]"
        markup: True
        halign: "center"
        pos_hint: {"center_y":0.05}
        
        
        