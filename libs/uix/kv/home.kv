<MDToolbar@MDTopAppBar>:
<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#e7e4c0"
    unfocus_color: "#f7f4e7"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    ripple_color: "#c5bdd2"
    selected_color: "#0c6c4d"


<DrawerLabelItem@MDNavigationDrawerItem>
    bg_color: "#f7f4e7"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    _no_ripple_effect: True

<Home_Screen>:
    name: "home"
    
    MDTextField:
        id: filenamefield
        hint_text: "Filename"
        mode: "round"
        line_color_focus: "#4a4939"
        hint_text_color_focus: "#4a4939"
        text_color_focus: "#4a4939"
        pos_hint: {"center_x":0.6, "center_y":0.8}
        size_hint_x: .4
    
    MDRaisedButton:
        text: "Select File"
        md_bg_color: "#e7e4c0"
        text_color: "#4a4939"
        pos_hint: {"center_x":0.88, "center_y":0.8}
        size_hint_x: .1
        on_release: root.file_manager_open()
    
    MDTextField:
        size_hint_x: .5
        hint_text: "Message"
        mode: "fill"
        line_color_focus: "#4a4939"
        hint_text_color_focus: "#4a4939"
        text_color_focus: "#4a4939"
        size_hint: .4,.3
        multiline: True
        max_text_length: 320
        pos_hint: {"center_x":0.6, "center_y":0.6}
     

    MDRaisedButton:
        text: "Send To All"
        md_bg_color: "#e7e4c0"
        text_color: "#4a4939"
        pos_hint: {"center_x": 0.6, "center_y":0.4}
        size_hint_x: .3
        on_release: 
            #app.screen_manager.change_screen("home")

    ScrollView:
        pos_hint: {"center_x":0.15, "center_y":.5}
        size_hint: .3,.7
        MDList:
            id: container
            OneLineListItem:
                text: "+999999999"
            OneLineListItem:
                text: "+999999999"
            OneLineListItem:
                text: "+999999999"
            OneLineListItem:
                text: "+999999999"
            OneLineListItem:
                text: "+999999999"
